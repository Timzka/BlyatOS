<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net6.0</TargetFramework>
        <!--<RuntimeIdentifier>cosmos</RuntimeIdentifier>-->
        <Platform>cosmos</Platform>
        <SupportsX86Intrinsics>false</SupportsX86Intrinsics>
        <SelfContained>True</SelfContained>
    </PropertyGroup>

    <PropertyGroup>
        <EnableGDB>False</EnableGDB>
        <StartCosmosGDB>False</StartCosmosGDB>
        <VisualStudioDebugPort>Pipe: Cosmos\Serial</VisualStudioDebugPort>
        <CosmosDebugPort>Serial: COM1</CosmosDebugPort>
        <Launch>VMware</Launch>
        <Profile>VMware</Profile>
        <Description>Use VMware Player or Workstation to deploy and debug.</Description>
        <PxeInterface>192.168.0.8</PxeInterface>
        <DebugEnabled>False</DebugEnabled>
        <OptimizationLevel>1</OptimizationLevel>
    </PropertyGroup>

    <ItemGroup>
      <None Remove="Library\Ressources\FilesAudio\GameOver.wav" />
      <None Remove="Library\Ressources\FilesAudio\HighScore.wav" />
      <None Remove="Library\Ressources\FilesAudio\MainMusic.wav" />
      <None Remove="Library\Ressources\FilesAudio\Title.wav" />
      <None Remove="Library\Ressources\FilesBMP\TetrisLogo.bmp" />
    </ItemGroup>

    <ItemGroup>
      <EmbeddedResource Include="Library\Ressources\FilesAudio\GameOver.wav" />
      <EmbeddedResource Include="Library\Ressources\FilesAudio\HighScore.wav" />
      <EmbeddedResource Include="Library\Ressources\FilesAudio\MainMusic.wav" />
      <EmbeddedResource Include="Library\Ressources\FilesAudio\Title.wav" />
      <EmbeddedResource Include="Library\Ressources\FilesBMP\TetrisLogo.bmp" />
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="Cosmos.Build" Version="0-*" NoWarn="NU1604" />
        <PackageReference Include="Cosmos.Debug.Kernel" Version="0-*" NoWarn="NU1604" />
        <PackageReference Include="Cosmos.System2" Version="0-*" NoWarn="NU1604" />
		<PackageReference Include="Cosmos.Plugs" Version="0-*" NoWarn="NU1604" />
    </ItemGroup>

</Project>
